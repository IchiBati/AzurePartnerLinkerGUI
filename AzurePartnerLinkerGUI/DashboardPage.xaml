<Page x:Class="AzurePartnerLinkerGUI.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="380"
      Title="DashboardPage"
      FontSize="14"> <!-- Setzt eine angenehme Grund-Schriftgröße -->

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

            <!-- 1. KONTEXT: Bleibt unverändert -->
            <GroupBox Header="Aktueller Kontext" Padding="10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Tenant ID:" FontWeight="Bold" Width="120"/>
                        <TextBlock x:Name="TenantIdTextBlock" Text="..."/>
                    </StackPanel>
                    <Separator Margin="0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Verknüpfter PAL:" FontWeight="Bold" Width="120"/>
                        <TextBlock x:Name="PartnerIdTextBlock" Text="..."/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Partnername:" FontWeight="Bold" Width="120"/>
                        <TextBlock x:Name="PartnerNameTextBlock" Text="..."/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- 2. AKTIONSEINGABE: Ein Standard-Label und eine Standard-TextBox -->
            <TextBlock Text="Partner-ID für die Aktion:" 
                       Margin="0,25,0,5"/>
            <TextBox x:Name="PartnerIdBox"
                     Padding="5"
                     TextChanged="OnPartnerIdChanged"/>

            <!-- 3. AKTIONEN: Standard-Buttons mit dezentem Styling -->
            <Button x:Name="LinkButton"
                    Content="PAL verknüpfen / aktualisieren"
                    Click="LinkPal_Click"
                    Margin="0,20,0,0"
                    Padding="8"
                    IsEnabled="False"/>
            
            <Button x:Name="DeleteButton"
                    Content="PAL-Verknüpfung löschen"
                    Click="DeletePal_Click"
                    Margin="0,10,0,0"
                    Padding="8"
                    IsEnabled="False"
                    Foreground="Red"
                    BorderBrush="Red"
                    BorderThickness="1.5"
                    Background="Transparent"/> <!-- Dieser Trick erzeugt den "Outlined"-Look -->
            
        </StackPanel>
    </Grid>
</Page>
