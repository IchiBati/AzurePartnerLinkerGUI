<Page x:Class="AzurePartnerLinkerGUI.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="LoginPage"
      FontSize="14"> <!-- Setzt eine angenehme Grund-Schriftgröße -->

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">

        <!-- Sektion für Tenant ID -->
        <TextBlock Text="Tenant ID:"/>
        <TextBox x:Name="TenantIdBox" 
                 Margin="0,5,0,0" 
                 Padding="5"
                 TextChanged="OnTextChanged"/>

        <!-- Sektion für Client ID -->
        <TextBlock Text="Client ID:" 
                   Margin="0,15,0,5"/>
        <TextBox x:Name="ClientIdBox" 
                 Padding="5"
                 TextChanged="OnTextChanged"/>

        <!-- Sektion für Client Secret -->
        <TextBlock Text="Client Secret:" 
                   Margin="0,15,0,5"/>
        <PasswordBox x:Name="ClientSecretBox"
                     Padding="5"
                     PasswordChanged="OnPasswordChanged"/>
        
        <!-- Der primäre Aktions-Button -->
        <Button x:Name="AuthenticateButton" 
                Content="Authenticate" 
                Click="Authenticate_Click" 
                IsEnabled="False" 
                Margin="0,25,0,0"
                Padding="8"/>
        
    </StackPanel>
</Page>